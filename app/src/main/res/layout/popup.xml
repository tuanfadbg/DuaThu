<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bordercustom">

    <LinearLayout

        android:id="@+id/select_bird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:weightSum="3"
        android:padding="5dp"
        android:background="@drawable/background_select_bird">
        <ImageButton
            android:id="@+id/bird_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_bird_1_big"
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
        <ImageButton
            android:id="@+id/bird_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_bird_2_big"
            android:background="@null"
            android:layout_gravity="center"/>
        <ImageButton
            android:id="@+id/bird_3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_bird_3_big"
            android:background="@null"
            android:layout_gravity="center"
            />
    </LinearLayout>
</RelativeLayout>